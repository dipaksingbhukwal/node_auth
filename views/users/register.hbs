<div class="container" style="background:#3498db;">
    <div class="box">
        <form id="login" action="/users/register" method="post">
            <input type="text" class="email" name="email" placeholder="E-mail" required="">
            <input type="text" class="email" name="username" placeholder="Username" required="">
            <input type="password" class="password" name="password" placeholder="Password" id="password" required="">
            <input type="password" class="password" name="passwordConf" placeholder="Confirm Password"
                id="password_conf" required="">
            <p>Contact No</p>
            <input type="tel" class="password" name="telephone" placeholder="xxx-xxx-xxxx" required=""
                pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}">
            <p>Address</p>
            <input type="text" class="password" name="street" placeholder="Street name/apt #" required="">
            <input type="text" class="password" name="city" placeholder="City" required="">
            <input type="text" class="password" name="state" placeholder="State" required="">
            <input type="text" class="password" name="country" placeholder="Country" required="">
            <input type="submit" id="btn2" value="REGISTER">
            <br>
            <a href="/users/login"><button class="btn">Login</button></a>
        </form>

    </div>
</div>